<%- include('header') %>

<div class="top-container-image">
    <div class="container sign-in-container mt-5">
        <div class="container">
            <main class="form-signin mt-5">

                <form id="loginForm" method="POST" action="/login">
                    <h1 class="h3 mb-3 fw-normal text-light">Log In</h1>

                    <% if (warningMessage && warningMessage.length > 0) { %>
                        <div class="alert alert-warning">
                            <%= warningMessage %>
                        </div>
                    <% } %>
                
                    <% if (successMessage && successMessage.length > 0) { %>
                        <div class="alert alert-success">
                            <%= successMessage %>
                        </div>
                    <% } %>

                    <div class="form-floating">
                        <input type="text" class="form-control form-control-auth auth-form" id="floatingInput"
                               placeholder="name@example.com" name="email_username">
                        <label for="floatingInput">Email or Username</label>
                    </div>
                    <div class="form-floating pb-4 mt-3">
                        <input type="password" class="form-control form-control-auth auth-form" id="floatingPassword"
                               placeholder="Password" name="password">
                        <label for="floatingPassword">Password</label>
                    </div>
                    <button class="btn btn-info w-100 py-2" type="submit">Log In</button>
                    <p class="auth-form-text text-white mb-1 pt-3">Don't have an account?</p>
                    <a href="/signup" class="btn btn-info btn-reg w-100 py-2" type="submit">Sign Up</a>
                </form>
            </main>
        </div>
    </div>
</div>

<%- include('footer') %>